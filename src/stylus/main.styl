// ##########
// layout classes
// ##########
.l-wrap
	font-system()

.l-container
	max-width 480px
	padding-left 10px
	padding-right 10px
	margin-left auto
	margin-right auto

	&.m-large
		max-width 768px

.l-h1
	font-size 30px
	font-weight bold
	margin-top 20px
	margin-bottom 30px
	text-align center

.l-h2
	font-size 24px
	font-weight bold
	margin-bottom 20px
	text-align center

.l-input
	display block
	width 100%
	margin-bottom 10px
	border 1px solid #eee
	padding 5px 10px
	font-size 16px

.l-textarea
	display block
	width 100%
	height 100px
	margin-bottom 10px
	border 1px solid #eee
	resize vertical
	padding 5px 10px
	font-size 16px

// ##########
// utility classes
// ##########

.u-clearfix
	clearfix()

